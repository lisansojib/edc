                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <div id="tblToolbar" class="mb-1">
                        <button href="/admin/email-funnel-create" class="btn btn-primary" id="add-new-event">
                            <i class="fa fa-plus"></i>&nbsp;Add New
                        </button>
                    </div>
                    <table id="tblList" class="table table-hover mb-0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" data-backdrop="false" id="event-modal" tabindex="-1" aria-labelledby="event-modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="event-modal-label">Add new Event</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="event-form">
                    <input type="hidden" name="id" id="id" value="0" />
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" rows="2" id="description" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="panel">Speakers</label>
                        <select id="speakers" name="speakers" class="form-control" style="width: 100%" multiple></select>
                    </div>
                    <div class="form-group">
                        <label for="origin">Sponsors</label>
                        <select id="sponsors" name="sponsors" class="form-control" style="width: 100%" multiple></select>
                    </div>
                    <div class="form-group">
                        <label for="date">Event Date</label>
                        <input type="date" class="form-control" id="eventDate" name="eventDate">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btn-save-event">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/admin/events.js" asp-append-version="true"></script>
}