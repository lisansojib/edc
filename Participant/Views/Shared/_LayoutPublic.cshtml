<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title | EDC Portal</title>

    <link rel="stylesheet" href="~/App_Themes/nobleui/assets/vendors/core/core.css">
    <link rel="stylesheet" href="~/App_Themes/nobleui/assets/fonts/feather-font/css/iconfont.css">
    <link rel="stylesheet" href="~/App_Themes/nobleui/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/App_Themes/nobleui/assets/css/demo_5/style.css">
    <link rel="shortcut icon" href="~/App_Themes/nobleui/assets/images/favicon.png" />
    <link href="~/App_Themes/lib/axios-progress-bar/dist/nprogress.min.css" rel="stylesheet" />

    <link href="~/App_Themes/lib/toastr.js/toastr.css" rel="stylesheet" />

    @RenderSection("Styles", false)
</head>
<body>
    <div class="main-wrapper">
        <div class="horizontal-menu">
            <nav class="navbar top-navbar">
                <div class="container">
                    <div class="navbar-content">
                        <a href="#" class="navbar-brand">
                            EDC<span>&nbsp;Portal</span>
                        </a>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="flag-icon flag-icon-us mt-1" title="us"></i> <span class="font-weight-medium ml-1 mr-1 d-none d-md-inline-block">English</span>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="languageDropdown">
                                    <a href="javascript:;" class="dropdown-item py-2"><i class="flag-icon flag-icon-us" title="us" id="us"></i> <span class="ml-1"> English </span></a>
                                    <a href="javascript:;" class="dropdown-item py-2"><i class="flag-icon flag-icon-fr" title="fr" id="fr"></i> <span class="ml-1"> French </span></a>
                                    <a href="javascript:;" class="dropdown-item py-2"><i class="flag-icon flag-icon-de" title="de" id="de"></i> <span class="ml-1"> German </span></a>
                                    <a href="javascript:;" class="dropdown-item py-2"><i class="flag-icon flag-icon-pt" title="pt" id="pt"></i> <span class="ml-1"> Portuguese </span></a>
                                    <a href="javascript:;" class="dropdown-item py-2"><i class="flag-icon flag-icon-es" title="es" id="es"></i> <span class="ml-1"> Spanish </span></a>
                                </div>
                            </li>
                            <partial name="_LoginPartial"/>
                        </ul>
                        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="horizontal-menu-toggle">
                            <i data-feather="menu"></i>
                        </button>
                    </div>
                </div>
            </nav>
            <nav class="bottom-navbar">
                <div class="container">
                    <ul class="nav page-navigation">
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="link-icon" data-feather="home"></i>
                                <span class="menu-title">Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="link-icon" data-feather="box"></i>
                                <span class="menu-title">Apps</span>
                                <i class="link-arrow"></i>
                            </a>
                            <div class="submenu">
                                <ul class="submenu-item">
                                    <li class="nav-item"><a class="nav-link" href="#">Chat</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#">Calendar</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a href="/home/faq" class="nav-link">
                                <i class="link-icon" data-feather="book"></i>
                                <span class="menu-title">Faq</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/home/faq" class="nav-link">
                                <i class="link-icon" data-feather="book"></i>
                                <span class="menu-title">Privacy</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <!-- partial -->

        <div class="page-wrapper">

            <div class="page-content">

                @RenderBody()

            </div>

            <!-- partial:../../partials/_footer.html -->
            <footer class="footer d-flex flex-column flex-md-row align-items-center justify-content-between">
                <p class="text-muted text-center text-md-left">Copyright © 2020 <a href="/" target="_blank">EDC Portal</a>. All rights reserved</p>
                <p class="text-muted text-center text-md-left mb-0 d-none d-md-block">Handcrafted With <i class="mb-1 text-primary ml-1 icon-small" data-feather="heart"></i></p>
            </footer>
            <!-- partial -->

        </div>
    </div>

    <script src="~/App_Themes/nobleui/assets/vendors/core/core.js"></script>
    <script src="~/App_Themes/nobleui/assets/vendors/feather-icons/feather.min.js"></script>
    <script src="~/App_Themes/nobleui/assets/js/template.js"></script>
    <script src="~/App_Themes/lib/axios/axios.min.js"></script>
    <script src="~/App_Themes/lib/axios-progress-bar/dist/index.min.js"></script>
    <script src="~/App_Themes/lib/toastr.js/toastr.min.js"></script>

    <script src="~/App_Themes/js/utilities.js?version=@DateTime.Now.Ticks"></script>
    <script src="~/App_Themes/js/site.js?version=@DateTime.Now.Ticks"></script>

    @RenderSection("Scripts", false)
</body>
</html>